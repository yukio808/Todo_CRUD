doctype
html
  head
    //- link(href='/css/reset.css', rel='stylesheet', media='screen')
    link(href='/css/styles.css', rel='stylesheet', media='screen')
    script(type='text/javascript', src='http://code.jquery.com/jquery-1.10.2.min.js')
    script(src='/js/to_do.js')

  body
    h1 Yukio's ToDo BLOG
    div.intro Update on what to do. Help me out!!!!!!
    div.toDo
      section.list
        each listItem in listItems
          a(href='/todos/#{listItem._id}/edit')
            if (listItem.is_done)
              input.checkbox(type="checkbox", data-list="#{listItem._id}" action="/todos/#{listItem._id}/complete", checked='checked')
              p!= listItem.todo
              div.listitem!= listItem.details
              form.clearfix(action="/todos/#{listItem._id}?_method=DELETE", method="POST")
                button DELETE
            else 
              input.roundedtwo.checkbox(type="checkbox", data-list="#{listItem._id}" action="/todos/#{listItem._id}/complete")
              p!= listItem.todo
              div.listitem!= listItem.details
              form.clearfix(action="/todos/#{listItem._id}?_method=DELETE", method="POST")
                button DELETE
    a.new(href="/new-todo/")
      button new