doctype
html
  head
    link(href='/css/styles.css', rel='stylesheet', media='screen')
    script(type='text/javascript', src='http://code.jquery.com/jquery-1.10.2.min.js')
    script(src='/js/to_do.js')

  body
    h1 Yukio's ToDo List
    div.toDo
      section.list
        each listItem in listItems
          a(href='/todos/#{listItem._id}/edit')
            p!= listItem.todo
            div!= listItem.details
            p!= listItem._id
          input(type="checkbox", data-list="#{listItem._id}" action="/todos/#{listItem._id}/complete", method="PUT")
          form(action="/todos/#{listItem._id}?_method=DELETE", method="POST")
              //- button acts as "submit" to issue the POST request (really DELETE)
            button x
    a(href="/new-todo/")
      button new