doctype
html
  head
    link(href='/css/styles.css', rel='stylesheet', media='screen')
    script(type='text/javascript', src='http://code.jquery.com/jquery-1.10.2.min.js')
    script(src='/js/to_do.js')
  body
    h1 EDIT SHEET
    //- p= listItems[0][0]._id
    form(action='/todos/#{listItems[0]._id}/edit?_method=PUT', method='post')
      fieldset
        div.listEdit
          button#save Save
          input(type="text", name="todo", value="#{listItems[0].todo}", data-list="#{listItems[0]._id}")
          textarea(type="text", name="details", data-list="#{listItems[0]._id}")= listItems[0].details